<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <PackageId>AvaloniaToaster</PackageId>
    <Version>1.1.2</Version>
    <Authors>TavisMac1</Authors>
    <Description>A toast notification service for Avalonia UI.</Description>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>avalonia;toast;notification</PackageTags>
    <RepositoryUrl>https://github.com/TavisMac1/AvaloniaToaster</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia" Version="11.2.1" />
  </ItemGroup>
  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="" />
   </ItemGroup>
</Project>